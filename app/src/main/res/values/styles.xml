<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.TextAppearance.H1Bold" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/app_grey_2</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/blogger_sans_medium</item>
    </style>

    <style name="AppTheme.TextAppearance.H1Medium" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/app_grey_2</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/blogger_sans_medium</item>
    </style>

    <style name="AppTheme.TextAppearance.H1Light" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/app_grey_2</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/blogger_sans_light</item>
    </style>

    <style name="AppTheme.TextAppearance.H2Medium" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/app_grey_2</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/blogger_sans_medium</item>
    </style>

    <style name="AppTheme.TextAppearance.H2Light" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/app_grey_2</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/blogger_sans_light</item>
    </style>

    <style name="AppTheme.TextAppearance.H3Medium" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/app_grey_2</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/blogger_sans_medium</item>
    </style>

    <style name="AppTheme.TextAppearance.H3Light" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/app_grey_2</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/blogger_sans_light</item>
    </style>

    <style name="AppTheme.TextAppearance.BodyLight" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/app_grey_2</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/blogger_sans_light</item>
    </style>

</resources>
